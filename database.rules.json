{
  "rules": {
    
    "agp" : {
      ".read": "auth != null",
      ".write": "auth.provider != 'anonymous'"
    },

    "customer-tickets" : {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    "fgd" : {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    "inbox" : {
      ".read": "auth != null",
      ".write": "auth.provider != 'anonymous'"
    },

    "inventory" : {
      ".read": "auth != null",
      ".write": "auth.provider != 'anonymous'",
      "mats": {
        ".indexOn": [
          "mac-address"
        ]
      },
      "yipli-app" : {
        "minimum-support-version" : {
          ".read" : "auth.provider != 'anonymous'"
        }
      }
    },

    "mappings" : {
      ".read": "auth != null",
      ".write": "auth.provider != 'anonymous'"
    },

    "new-player-sessions" : {
      ".read": "auth != null",
      ".write": "auth.provider != 'anonymous'"
    },

    "profiles" : {
      ".read": "true",
      ".write": "auth != null",
      "users":{
        ".indexOn":[
          "contact-no",
          "email"
        ]
      }
    },

    "promotions" : {
      ".read": "auth != null",
      ".write": "auth.provider != 'anonymous'"
    },

    "remote-codes" : {
      ".read": "auth != null",
      ".write": "auth.provider != 'anonymous'"
    },

    "sessions" : {
      ".read": "auth != null",
      ".write": "auth != null",
      "game-sessions": {
        ".indexOn": [
          "player-id",
          "user-id",
          "game-id",
          "timestamp"
        ]
      }
    },

    "stage-bucket" : {
      ".read": "auth != null",
      ".write": "true"
    },

    "user-stats" : {
      ".read": "auth != null",
      ".write": "auth.provider != 'anonymous'",
      "$userId": {
        "w": {
          "$year": {
            "$month": {
              "$date": {
                "$playerId": {
                  ".indexOn": [
                    "fp"
                  ]
                }
              }
            }
          }
        },
        "m": {
          "$year": {
            "$month": {
              "$date": {
                "$playerId": {
                  ".indexOn": [
                    "fp",
                    "c"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}